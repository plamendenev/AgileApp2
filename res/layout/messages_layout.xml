<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="107dp"
        layout="@layout/actionbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/include1"
        android:background="#F8F8F8"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#F8F8F8" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8F8F8"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_v1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="@string/v1" />

                <Button
                    android:id="@+id/btn_v2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="@string/v2" />

                <Button
                    android:id="@+id/btn_v3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="@string/v3" />

                <Button
                    android:id="@+id/btn_v4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="@string/v4" />

                <Button
                    android:id="@+id/btn_v5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="@string/v5" />

                <Button
                    android:id="@+id/btn_v6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="Spotting Errors" />

                <Button
                    android:id="@+id/btn_v7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:text="Synonyms" />

                <!--
                <Button
                    android:id="@+id/btn_v8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                      android:background="@drawable/shape"
                    android:text="@string/v8" />

                <Button
                    android:id="@+id/btn_v9"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                      android:background="@drawable/shape"
                    android:text="@string/v9" />
                -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>